<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_white_1000">

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />


    <TextView
        android:id="@+id/diasemana"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/diasemanafin"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Lunes" />

    <TextView
        android:id="@+id/dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintEnd_toEndOf="@+id/diasemana"
        app:layout_constraintStart_toStartOf="@+id/diasemana"
        app:layout_constraintTop_toBottomOf="@+id/diasemana"
        tools:text="26" />

    <TextView
        android:id="@+id/mes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/linea"
        app:layout_constraintEnd_toEndOf="@+id/dia"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@+id/dia"
        app:layout_constraintTop_toBottomOf="@+id/dia"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Sep." />


    <TextView
        android:id="@+id/linea"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimary"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/diasemanafin"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/contentnota"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Martes" />

    <TextView
        android:id="@+id/diafin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintEnd_toEndOf="@+id/diasemanafin"
        app:layout_constraintStart_toStartOf="@+id/diasemanafin"
        app:layout_constraintTop_toBottomOf="@+id/diasemanafin"
        tools:text="27" />

    <TextView
        android:id="@+id/mesfin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/diafin"
        app:layout_constraintStart_toStartOf="@+id/diafin"
        app:layout_constraintTop_toBottomOf="@+id/diafin"
        tools:text="Sep." />

    <LinearLayout
        android:id="@+id/contentnota"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/mesfin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/diasemanafin">

        <TextView
            android:id="@+id/nota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="19" />

        <ImageView
            android:id="@+id/img_tiponota"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:id="@+id/tiponota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="-"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="10sp"
            tools:text="Destacado" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/contenttitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/diasemana"
        app:layout_constraintStart_toEndOf="@+id/count"
        app:layout_constraintTop_toTopOf="@+id/count">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="12sp"
            tools:text="Desarrollo de jercicios conjuntossssssssssssssssssssssssssssssssssssssssssssss" />

        <TextView
            android:id="@+id/curso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            tools:text="MATEMATICA" />

        <TextView
            android:id="@+id/docente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Guillermo mamani"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="8sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>